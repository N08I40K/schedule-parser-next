generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id          String   @id @map("_id") @db.ObjectId
  //
  username    String   @unique
  //
  salt        String
  password    String
  //
  accessToken String   @unique
  //
  group       String
  role        UserRole
}
